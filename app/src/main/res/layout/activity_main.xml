<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="jr.eder.developer.example.com.filtersample.MainActivity">
    <jp.co.cyberagent.android.gpuimage.GPUImageView
        android:id="@+id/gpuimage"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="70"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:text="Seleccionar imagen"
        android:id="@+id/select"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="10">
        <Button
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="Sepia"
            android:id="@+id/btn_average_blur_style"/>
        <Button
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="GAUSSIAN_BLUR_STYLE"
            android:id="@+id/btn_GAUSSIAN_BLUR_STYLE"/>
        <Button
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="SOFT_GLOW_STYLE"
            android:id="@+id/btn_SOFT_GLOW_STYLE"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="10">
        <Button
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="LIGHT_STYLE"
            android:id="@+id/btn_LIGHT_STYLE"/>
        <Button
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="LOMO_STYLE"
            android:id="@+id/btn_LOMO_STYLE"/>
        <Button
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="NEON_STYLE"
            android:id="@+id/btn_NEON_STYLE"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="10">
        <Button
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="PIXELATE_STYLE"
            android:id="@+id/btn_PIXELATE_STYLE"/>
        <Button
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="MOTION_BLUR_STYLE"
            android:id="@+id/btn_MOTION_BLUR_STYLE" />
        <Button
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="OIL_STYLE"
            android:id="@+id/btn_OIL_STYLE"/>
    </LinearLayout>

</LinearLayout>
